# 서버 설정
PORT=3001  # `board-service`가 다른 서비스와 충돌하지 않도록 포트 변경
NODE_ENV=development
HOST=0.0.0.0

# 데이터베이스 설정 (각 서비스별 독립적인 DB 적용)
MONGO_HOST=192.168.0.140
MONGO_PORT=27017
MONGO_DB=board-service
MONGODB_URI=mongodb://${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}
MONGODB_POOL_SIZE=10
MONGODB_CONNECT_TIMEOUT=10000

# API 설정
API_PREFIX=/api/boards
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 보안 설정
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=3600

# 로깅 설정
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=logs/board-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# 성능 설정
BODY_PARSER_LIMIT=1mb
COMPRESSION_LEVEL=6

# 게시판 설정
MAX_P
