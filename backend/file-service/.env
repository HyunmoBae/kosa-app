# 서버 설정
PORT=3002  # `file-service`가 다른 서비스와 충돌하지 않도록 포트 변경
NODE_ENV=development
HOST=0.0.0.0

# 데이터베이스 설정 (각 서비스별 독립적인 DB 적용)
MONGO_HOST=192.168.0.141
MONGO_PORT=27017
MONGO_DB=file-service
MONGODB_URI=mongodb://${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}
MONGODB_POOL_SIZE=10
MONGODB_CONNECT_TIMEOUT=10000

# API 설정
API_PREFIX=/api/files
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 파일 업로드 설정
UPLOAD_DIR=/mnt/nfs/uploads  # NFS 마운트된 경로 사용
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d
